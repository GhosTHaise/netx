{
    "compilerOptions": {
        "target": "ES2019",
            "module": "ESNext",
                "lib": ["dom", "dom.iterable", "esnext"],
                    "declaration": true,
                        "declarationMap": true,
                            "sourceMap": true,
                                "outDir": "./dist",
                                    "rootDir": "./src",
                                        "strict": true,
                                            "esModuleInterop": true,
                                                "skipLibCheck": true,
                                                    "forceConsistentCasingInFileNames": true,
                                                        "moduleResolution": "node",
                                                            "jsx": "react-jsx",
                                                                "baseUrl": ".",
                                                                    "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
        "exclude": ["node_modules", "dist", "scripts"]
}